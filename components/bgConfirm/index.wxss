.bgConfirm {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}
.bgContent {
  width: 86vh;
  background-color: #fff;
  height: 35vh;
  overflow: hidden;
  border-radius: 1vh;
  display: flex;
  padding: 8vh 4vh;
  position: relative
}
.bgContent .ewm {
  width: 35vh;
  height: 35vh;
}
.contRig {
  flex: 1;
  margin-left: 5vh;
}
.bgTit {
  font-size: 4vh;
  margin-top: 6vh;
  margin-bottom: 3vh
}
.bgTxt {
  font-size: 3vh;
  margin: 2vh 0
}
.closeBgConfirm {
  position: absolute;
  top: 2vh;
  left: 2vh;
  width: 4vh;
  height: 4vh;
}
.outTit {
  font-size: 6vh;
  text-align: center;
  padding: 0 2vh;
}
.bottomBtn {
  display: flex;
  margin-top: 12vh;
}
.bottomBtn .button {
  color: #fff;
  height: 9vh;
  line-height: 9vh;
}
.loginOut {
  flex: 1;
  background-color: #404040;
}
.cancle {
  flex: 1;
  margin-left: 4vh;
  background-color: #858585;
}