.model {
  position: fixed;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.showInfo {
  position: fixed;
  width: 80vh;
  height: 65vh;
  border-radius: 3vh;
  background: #444452;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  padding: 3vh;
  z-index: 11;
}
.showInfo .close {
  float: right;
}
.showInfo .close image {
  width: 10vh;
  height: 10vh;
  float: left;
}
.showInfo .info {
  font-size: 4vh;
  margin-top: 14vh;
  width: 100%;
  padding: 0 2vh;
  text-align: center;
  line-height: 7vh;
}
.showInfo button {
  position: absolute;
  bottom: 8vh;
  background: #fd8b22;
  font-size: 5vh;
  color: #fff;
  width: 60vh;
  border-radius: 3vh;
  left: 50%;
  transform: translateX(-50%);
}